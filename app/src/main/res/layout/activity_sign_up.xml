<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/safeher">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="48dp"
        android:layout_height="46dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/pink_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/pink"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/edt_signup_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/pink_border"
                android:layout_marginTop="20dp"
                android:hint="Name"
                android:drawableLeft="@drawable/person"
                android:padding="8dp"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>

            <EditText
                android:id="@+id/edt_signup_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/pink_border"
                android:layout_marginTop="20dp"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/mail"
                android:padding="8dp"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>
            <EditText
                android:id="@+id/edt_signup_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/pink_border"
                android:layout_marginTop="20dp"
                android:hint="username"
                android:drawableLeft="@drawable/account"
                android:padding="8dp"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>

            <EditText
                android:id="@+id/edt_signup_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/pink_border"
                android:layout_marginTop="20dp"
                android:hint="password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/password"
                android:padding="8dp"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>

            <Button
                android:id="@+id/signup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/login_redirect_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already an user? Login"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@color/Light_pink"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

