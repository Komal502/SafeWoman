<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".PoliceStation.ViewPoliceStationActivity"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/tvPoliceStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PoliceStation Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPoliceStationAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PoliceStation Address"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPoliceStationDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance: 0.00 km"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />



    <WebView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnViewOnMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Directions"
        android:layout_marginTop="16dp" />
</LinearLayout>
