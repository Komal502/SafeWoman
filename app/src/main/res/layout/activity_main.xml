<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- FrameLayout for Fragments -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.drawerlayout.widget.DrawerLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:fitsSystemWindows="true"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTintMode="src_over"
        app:background="@drawable/bottom_nav_background"
        app:backgroundTint="@color/pink"
        android:backgroundTint="@color/Light_pink"
        app:itemRippleColor="@color/violate"
        app:itemBackground="@color/Light_pink"
        android:background="@drawable/bottom_nav_background"
        app:itemTextAppearanceInactive="@color/pink"
        android:tooltipText="@string/material_motion_easing_decelerated"
        app:itemIconTint="@color/pink"
        android:outlineSpotShadowColor="@color/pink"
        android:outlineAmbientShadowColor="@color/pink"
        app:menu="@menu/bottom_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
